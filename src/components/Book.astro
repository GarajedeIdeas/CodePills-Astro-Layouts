---
export interface Props {
  title: string;
  author: string;
  cover: string;
}

const { title, author, cover } = Astro.props;
---

<div>
  <h1>{title}</h1>
  <h2>{author}</h2>
  <img src={cover} alt={title} />
</div>

<style>
  body {
    font-family: Arial, Helvetica, sans-serif;
  }
  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  img {
    width: 200px;
    height: 300px;
  }

  p {
    width: 50%;
    text-align: center;
  }
</style>
